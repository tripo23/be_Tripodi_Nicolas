<!DOCTYPE html>
<html>

<head>
  <title>Cart</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <a class="navbar-brand" href="{{dynamicURL '/products'}}">
      Products
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
      </ul>
    </div>
  </nav>

  <div class="container mt-4">
    <h1 class="mb-4">Productos en el carrito ðŸ›’</h1>
    <table class="table table-bordered table-hover table-sm">
      <thead class="thead-light">
        <tr>
          <th>Producto</th>
          <th class="text-center" style="width: 10%;">Cantidad</th>
          <th class="text-center" style="width: 15%;">Precio</th>
          <th class="text-center" style="width: 15%;">Total</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{this.product.title}}</td>
          <td class="text-center">{{this.quantity}}</td>
          <td class="text-center">{{this.product.price}}</td>
          <td class="text-center">{{this.subtotal}}</td>
        </tr>
        {{/each}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3" class="text-right"><strong>Total:</strong></td>
          <td class="text-center"><strong>{{this.total}}</strong></td>
        </tr>
      </tfoot>
    </table>
    <input type="hidden" id="cartId" value="{{this.cartID}}">
    <button class="btn btn-primary" type="button" onclick="checkout()">Checkout</button>
  </div>



  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    function checkout() {
      const cartID = document.getElementById('cartId').value;
      const url = {{dynamicURL}}/api/carts/'${cartID}/purchase`;
      window.location.href = url;
    }
  </script>
</body>

</html>